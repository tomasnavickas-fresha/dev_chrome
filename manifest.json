{
  "manifest_version": 3,
  "name": "Feedr & Jira Helper",
  "version": "1.7",
  "description": "Sorts food items on Feedr and adds copy buttons to Jira tickets",
  "content_scripts": [
    {
      "matches": ["https://feedr.co/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://shedul.atlassian.net/*"],
      "js": ["jira.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": ["clipboardWrite"]
}
